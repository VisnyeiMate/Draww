namespace Drawing.cs;
using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        int x = 8, y = 8; 
        ConsoleKey key;     
        List<(int, int)> squares = new List<(int, int)>();    

        while (true)    
        {
            Console.Clear();       

            foreach (var square in squares) 
            {
                Console.SetCursorPosition(square.Item1, square.Item2);
                Console.Write("██");
            }

            Console.SetCursorPosition(x, y);
            Console.Write("██");

            key = Console.ReadKey(true).Key;

            if (key == ConsoleKey.UpArrow && y > 0)
                y--;
            else if (key == ConsoleKey.LeftArrow && x > 0)
                x--;
            else if (key == ConsoleKey.RightArrow && x < Console.WindowWidth - 1)
                x++;
            else if (key == ConsoleKey.DownArrow && y < Console.WindowHeight - 1)
                y++;
            else if (key == ConsoleKey.Spacebar)
                squares.Add((x, y));
            else if (key==ConsoleKey.NumPad0)
                Console.ForegroundColor = ConsoleColor.Green;
            else if (key == ConsoleKey.NumPad1)
                Console.ForegroundColor = ConsoleColor.White;
            else if (key == ConsoleKey.NumPad2)
                Console.ForegroundColor = ConsoleColor.Blue;
            else if (key == ConsoleKey.NumPad3)
                Console.ForegroundColor = ConsoleColor.Red;
            else if (key == ConsoleKey.Escape) // Kilépési lehetőség
                break;
        }
    }
}
